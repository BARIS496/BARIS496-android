<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto3">

    <EditText
        android:id="@+id/foodType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/miktar"/>

    <EditText
        android:id="@+id/miktar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/kartNo"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/kartNo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="PAY"
        android:layout_below="@+id/kartNo"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDED NEW CARD"
        android:id="@+id/addedCard"
        android:layout_centerInParent="true"
        android:layout_below="@+id/button"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>