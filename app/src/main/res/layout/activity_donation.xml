<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/baslik"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Choose you want to donate:"
        android:textColor="@color/design_default_color_primary"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image1"
        android:layout_below="@+id/baslik"
        app:srcCompat="@drawable/kopek_mama3"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_toRightOf = "@+id/image1"
        android:layout_below="@+id/baslik"
        android:layout_marginTop="25dp"
        android:textColor="@color/design_default_color_primary" />
    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_toRightOf="@+id/image1"
        android:text="Add To Cart"
        android:textColor="@color/design_default_color_primary"
        android:textSize="8dp" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image2"
        android:layout_below="@+id/image1"
        app:srcCompat="@drawable/kopek_mama2"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/image2"
        android:textColor="@color/design_default_color_primary" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_toRightOf="@+id/image2"
        android:text="Add To Cart"
        android:textColor="@color/design_default_color_primary"
        android:textSize="8dp" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image3"
        android:layout_below="@+id/image2"
        app:srcCompat="@drawable/kopek_mama"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/image3"
        android:textColor="@color/design_default_color_primary" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_toRightOf="@+id/image3"
        android:text="Add To Cart"
        android:textColor="@color/design_default_color_primary"
        android:textSize="8dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sepetOzeti"
        android:layout_below="@+id/image3"
        android:layout_marginTop="25dp" />
    <Button
        android:id="@+id/pay"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/sepetOzeti"
        android:layout_centerHorizontal="true"
        android:text="View Cart"
        android:textColor="@color/design_default_color_primary"
        android:textSize="10dp" />
    </RelativeLayout>

</ScrollView>